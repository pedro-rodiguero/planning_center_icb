{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "custom-rules"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "custom-rules/remove-first-comment-line": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}